{
  "name": "template-typescript-parcel-preact",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Template using TypeScript, Parcel and Preact",
  "author": "Eric Liu (https://github.com/metonym)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "rm -rf dist && parcel build src/index.html",
    "test": "jest",
    "lint": "tslint --fix -p . -c tslint.json"
  },
  "dependencies": {
    "preact": "^10.0.0-beta.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/jest": "^24.0.13",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
