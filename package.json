{
  "name": "template-typescript-parcel-preact",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Template to build Preact apps using Parcel",
  "author": "Eric Liu (https://github.com/metonym)",
  "scripts": {
    "start": "parcel public/index.html",
    "build": "rimraf dist && parcel build public/index.html --no-source-maps",
    "lint": "tslint --fix -p . -c tslint.json",
    "test": "jest --coverage",
    "test:tdd": "jest --watch"
  },
  "dependencies": {
    "preact": "^10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.19",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "parcel-bundler": "^1.12.4",
    "posthtml-expressions": "^1.1.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
